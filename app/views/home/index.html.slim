    .hero-body
      .container.has-text-centered
        h1.title Chordly
        h2.subtitle A free, open-source, online chord sheet creator

        = link_to get_started_path, class: "button is-light is-large" do
          span.icon.is-small.mr-1
            i.fas.fa-circle-play
          | Create Chord Sheet

      .container.mt-5
        = turbo_frame_tag "features-gif", src: asset_frame_path(asset: "features_gif"),
            class: "is-flex is-justify-content-center my-6 py-6" do
          .hero-image.spinner

  .hero.is-medium
    = adsense_unit(:horizontal)
    .hero-body
      .has-text-centered
        .is-flex.is-justify-content-center.is-align-items-center.is-flex-wrap-wrap
          span.icon-text.is-flex-wrap-nowrap.has-text-primary
            span.icon.is-large.mr-5
              i.fas.fa-music.fa-3x
          h1.title Transpose Chords

        h2.subtitle.mt-2 And edit chord sheets inline

        = link_to get_started_path, class: "button is-primary is-large" do
          span.icon.is-small.mr-1
            i.fas.fa-guitar
          | Transpose Song Now

        h3.subtitle.is-4.mt-3.has-text-primary.has-text-weight-bold No account required

        br
        .container.is-max-tablet
          .card
            .card-content
              .is-flex.is-justify-content-center.is-align-items-center.is-flex-wrap-wrap
                span.icon-text.is-flex-wrap-nowrap.has-text-primary
                  span.icon.is-large.mr-5
                    i.fas.fa-file-lines.fa-3x
                h1.title Take the hassle out of chord sheets

